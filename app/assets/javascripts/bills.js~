var adding_product = 0;
var adding_product_id_count=0;

$($('#add_product_link')
		.live('ajax:success', function(evt,data, textStatus, jqXHR)
		{
			adding_product+=1;
			adding_product_id_count+=1;
			
			$('#product-table').append(data);
			$('.new-product').last().attr('id','new-product-'+adding_product_id_count)
			
			console.log('success!');
		})
		.live('ajax:error'), function(evt,jqXHR, textStatus, errorThrown)
		{
			console.log("error!");
		});
		
